{
  "manifest_version": 3,
  "name": "Smart Autofill AI",
  "version": "1.0.0",
  "description": "AI-powered autofill for forms and job applications.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permission": ["https://jsonplaceholder.typicode.com/*"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Autofill"
  },
  "options_page": "options.html"
}
